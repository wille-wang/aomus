<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommended university tour routes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- intro -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore the University of Melbourne with our recommended tour routes, visit buildings like iconic landmarks and vibrant student hubs, perfect for new students to get acquainted with campus life."
        android:textSize="16sp"
        android:textStyle="normal"
        android:gravity="start"
        android:paddingBottom="8dp" />

    <!-- RecyclerView 用于显示路线列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"/>
</LinearLayout>
